///// _Malak_A7med_ /////
#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define el "\n"
using namespace std;
void solve() {
    ll n, k; cin>>n>>k;
    if ((k-1) * (k) / 2 + 1 < n) {
        cout << "-1" << el;
        return;
    }
    int l = 0, r = k, ans = k;
    while (l <= r) {
        ll mid = l + (r-l) / 2;
        ll sm = (k-1)*(k)/2 + 1 - (mid-1)*(mid)/2;
        if (sm >= n) {
            ans = k - mid;
            l = mid + 1;
        } else {
            r = mid - 1;
        }
    }
    cout << ans << el;
}

int main() {
    MalakA7med
    int t = 1; //cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}

