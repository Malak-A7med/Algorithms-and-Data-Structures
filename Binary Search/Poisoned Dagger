///// _Malak_A7med_ /////
#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define el "\n"
using namespace std;
ll damage(ll k, int n, vector<ll> &v) {
    ll d = 0;
    for (ll i=0; i < n-1; i++) { // 2 4 10
        d += min(k, v[i+1] - v[i]);
    }
    d += k;
    return d;
}
void solve() {
    int n; cin>>n;
    ll h; cin>>h;
    vector<ll> v(n);
    for (auto &i : v) cin>>i;
    ll l = 1, r = h, ans;
    while (l <= r) {
        ll mid = (l + r) / 2;
        if (damage(mid, n, v) >= h) {
            ans = mid;
            r = mid - 1;
        }
        else {
            l = mid + 1;
        }
    }
    cout << ans <<el;
}

int main() {
    MalakA7med
    int t = 1; cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}

