///// _Malak_A7med_ /////
#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false); cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define el "\n"
using namespace std;
void solve() {
    int n, d; 
    cin >> n >> d;
    vector<pair<int, int>> v(n);
    for (int i = 0; i < n; i++) {
        cin >> v[i].first >> v[i].second; 
    }
    sort(all(v)); 
    int l = 0, r = 0;
    ll sum = 0, ans = 0;
    while (r < n) {
        while (r < n && v[r].first - v[l].first < d) {
            sum += v[r].second;
            r++;
        }
        ans = max(ans, sum);
        sum -= v[l].second;
        l++;
    }
    cout << ans << el;
}

int main() {
    MalakA7med
    int t = 1; // cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}

