///// _Malak_A7med_ /////
#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false); cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define el "\n"
using namespace std;

ll can(int k, int n, ll s, const vector<ll> &cost) {
    if (k == 0) return 0; 
    vector<ll> b(n);
    for (int i = 0; i < n; i++) {
        b[i] = cost[i] + 1LL * (i + 1) * k;
    }
    sort(all(b));
    ll sm = 0;
    for (int i = 0; i < k; i++) {
        sm += b[i];
        if (sm > s) return -1; 
    }
    return sm <= s ? sm : -1;
}

void solve() {
    int n;
    ll s;
    cin >> n >> s;
    vector<ll> cost(n);
    for (int i = 0; i < n; i++) {
        cin >> cost[i];
    }
    int l = 0, r = n;
    int bk = 0;
    ll bc = 0;
    while (l <= r) {
        int mid = (l + r) / 2;
        ll tot = can(mid, n, s, cost); 
        if (tot != -1) {
            bk = mid;
            bc = tot;
            l = mid + 1;
        } else {
            r = mid - 1;
        }
    }
    cout << bk << " " << bc << el;
}

int main() {
    MalakA7med
    int t = 1; // cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}

