#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define el "\n"
using namespace std;
int n, l, r, x;
int d[105];
int Backtrack(int i, int cnt, int sm, int mx, int mn) {
    if ( i == n) {
        return(cnt >= 2 && mx - mn >= x && sm >= l && sm <= r);
    }
    return Backtrack(i + 1, cnt, sm, mx, mn) + Backtrack(i + 1, cnt + 1, sm + d[i], max(mx, d[i]), min(mn, d[i]));
}

void solve() {
    cin>> n >>l >> r >> x;
    for (int i = 0; i < n; i++ ) {
        cin>>d[i];
    }
    cout << Backtrack(0, 0, 0, -1, 2e9);

}

int main() {
    MalakA7med
    int t = 1; //cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}
