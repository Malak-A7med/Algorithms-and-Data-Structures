#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define pb push_back
#define el "\n"
using namespace std;

int n, m;
vector<string> grid;
int dx[] = {0, 0, -1, 1, 1, 1, -1, -1};
int dy[] = {-1, 1, 0, 0, 1, -1, 1, -1};
bool valid(int x, int y) {return x>=0 && x<n && y>=0 && y<m && grid[x][y]=='.';}

void BFS() {
    cin >> n >> m;

    vector<vector<int>> adj(n + 1);
    for (int i = 0; i < m; ++i) {
        int a, b; cin >> a >> b;
        adj[a].pb(b);
        adj[b].pb(a);
    }

    vector<int> team(n + 1, 0);

    for (int st = 1; st <= n; st++) {
        if (team[st] != 0) continue;
        queue<int> q;
        q.push(st);
        team[st] = 1;

        while (!q.empty()) {
            int u = q.front(); q.pop();
            for (int v : adj[u]) {
                if (team[v] == 0) {
                    team[v] = 3 - team[u];
                    q.push(v);
                }
                else if (team[v] == team[u]) {
                    cout << "IMPOSSIBLE" << el;
                    return;
                }
            }
        }
    }
    for (int i = 1; i <= n; ++i)
        cout << team[i] << " ";
    cout << el;
}


int main() {
    MalakA7med
    int tt = 1; // cin >> tt;
    while (tt--) {
        BFS();
    }
    return 0;
}


