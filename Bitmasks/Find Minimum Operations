///// _Malak_A7med_ /////
#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define el "\n"
using namespace std;
ll mn_op(ll n, ll k) {
    if (k == 1) return n;
    ll ops = 0;
    while (n > 0) {
        ops += n % k;
        n /= k;
    }
    return ops;
}

void solve() {
    int t; cin >> t;
    while (t--) {
        ll n, k;
        cin >> n >> k;
        cout << mn_op(n, k) << el;
    }
}

int main() {
    MalakA7med
    solve();
    return 0;
}

