///// _Malak_A7med_ /////
#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define pb push_back
#define el "\n"
using namespace std;

int n, m;
vector<vector<int>> adj;
vector<int> vis;
vector<ll> cost;

ll dfs(int u) {
    vis[u] = 1;
    ll mn = cost[u];
    for (auto v : adj[u]) {
        if (!vis[v]) {
            mn = min(mn, dfs(v));
        }
    }
    return mn;
}

void DebugOrDie() {
    cin >> n >> m;
    cost.resize(n + 1);
    adj.assign(n + 1, {});
    vis.assign(n + 1, 0);

    for (int i = 1; i <= n; i++)
        cin >> cost[i];

    for (int i = 0; i < m; i++) {
        int a, b;
        cin >> a >> b;
        adj[a].pb(b);
        adj[b].pb(a);
    }

    ll total = 0;
    for (int i = 1; i <= n; i++) {
        if (!vis[i]) {
            total += dfs(i); 
        }
    }

    cout << total << el;
}

int main() {
    MalakA7med
    DebugOrDie();
    return 0;
}


