///// _Malak_A7med_ /////
#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define pb push_back
#define el "\n"
using namespace std;
int dx[4] = {1, -1, 0, 0};
int dy[4] = {0, 0, 1, -1};
int n, m, cnt;
vector<int> vis;
vector<vector<int>>adj;
void dfs(int x) {
    vis[x] = 1;
    cnt++;
    for (auto v : adj[x]) {
        if (!vis[v]) {
            dfs(v);
        }
    }
}

void DebugOrDie() {
    cin >> n >> m;
    vis.resize(n + 1);
    adj.assign(n + 1, {});
    for (int i=0; i<m; i++) {
        int u, v; cin >> u >> v;
        adj[u].pb(v);
        adj[v].pb(u);
    }

    cnt = 0;
    ll ans = 1;
    for (int i = 1; i <= n; i++) {
        if (!vis[i]) {
            cnt = 0;
            dfs(i);
            ans *= (1ll << (cnt - 1));
        }
    }

    cout << ans << el;


}

int main() {
    MalakA7med
    int t = 1; // cin >> t;
    while (t--) {
        DebugOrDie();
    }
    return 0;
}
