#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define pb push_back
#define el "\n"
using namespace std;

int n, t;
vector<int> a, vis;
bool f = false;

void dfs(int x) {
    if (x == t) { 
        f = true;
        return;
    }
    if (x > n || vis[x]) return; 
    vis[x] = 1;
    dfs( x + a[x]);
}

void DebugOrDie() {
    cin >> n >> t;
    a.resize(n+1);
    vis.assign(n+1, 0);

    for (int i = 1; i < n; i++) cin >> a[i];

    dfs(1);

    cout << (f ? "YES" : "NO") << el;
}

int main() {
    MalakA7med
    int tt = 1; // cin >> tt;
    while (tt--) {
        DebugOrDie();
    }
    return 0;
}

