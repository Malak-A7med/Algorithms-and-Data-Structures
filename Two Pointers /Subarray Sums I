///// _Malak_A7med_ /////
#include <bits/stdc++.h>
#define all(v) v.begin(),v.end()
#define allr(v) v.rbegin(), v.rend()
#define MalakA7med ios_base::sync_with_stdio(false);cin.tie(nullptr); cout.tie(nullptr);
#define ll long long
#define el "\n"
using namespace std;
void solve() {
    ll n,tar,ans=0,sum=0;
    cin>>n>>tar;
    vector<ll>v(n);
    for(auto &i : v ) cin>>i; // 2 4 1 2 7
    int l=0,r=0;
    while (l < n){
        while(r<n && sum + v[r] <= tar)
            sum+=v[r], r++;
        if(sum == tar)
            ans++;
        sum-=v[l++];
    }
    cout<<ans<<el;
}

int main() {
    MalakA7med
    int t = 1; // cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}

